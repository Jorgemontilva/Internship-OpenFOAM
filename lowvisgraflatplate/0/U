FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1 0 0);

boundaryField
{
    ZeroGradientPlanes
    {
        type            zeroGradient;                   
    }

    Inlet
    {
        type            fixedValue;
        value           uniform (1 0 0);
    }
    
    Plate
    {
        type            noSlip;
    }

    FrontAndBack
    {
        type            empty;
    }
}

